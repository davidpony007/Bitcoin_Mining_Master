<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Contracts.ContractsFragment">

    <TextView
        android:id="@+id/text_contracts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section_bg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/top_section_background"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_bittycoon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="12dp"/>
        <!-- 头像圆形图片控件 -->

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_nickname"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp"
            android:layout_marginStart="64dp"
            android:textSize="13sp" />
        <!--    昵称-->

        <androidx.cardview.widget.CardView
            android:id="@+id/id_card"
            android:layout_width="88dp"
            android:layout_height="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="64dp"
            android:layout_marginTop="68dp">

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="18dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID："
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75896601"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- 圆角矩形，用户ID -->

        <androidx.cardview.widget.CardView
            android:id="@+id/id_BTC_price"
            android:layout_width="220dp"
            android:layout_height="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="52dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_card_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <!-- 顶部数字 -->
                <TextView
                    android:id="@+id/bitcoin_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000000281831800"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>

                <!-- 底部价格信息 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 BTC = $"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/id_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108041.56"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- BTC价格，余额 -->

        <androidx.cardview.widget.CardView
            android:id="@+id/id_BTC_price_right"
            android:layout_width="6dp"
            android:layout_height="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E28804"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="52dp">

        </androidx.cardview.widget.CardView>
        <!-- 右侧竖条，BTC价格右侧 -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bitcoin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bitcoin_1"
            app:layout_constraintTop_toTopOf="@id/id_BTC_price"
            app:layout_constraintBottom_toBottomOf="@id/id_BTC_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"/>
        <!-- 右上方比特币图标 -->

        <ImageView
            android:id="@+id/gifImageView2"
            android:src="@drawable/download2"
            android:layout_width="240dp"
            android:layout_height="153dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp"/>
        <!-- 中间的GIF动画 底座-->

        <ImageView
            android:id="@+id/gifImageView3"
            android:layout_width="80dp"
            android:layout_height="69dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="224dp"
            android:scaleType="centerCrop"
            android:src="@drawable/download3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 中间的GIF动画 电流输入 -->

        <ImageView
            android:id="@+id/gifImageViewkuangji"
            android:layout_width="120dp"
            android:layout_height="132dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kuangji"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 中间的GIF动画 矿机 -->


    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    上方背景图部分-->

    <TextView
        android:id="@+id/textView_title_active_contracts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_active_contracts"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="338dp"
        android:layout_marginStart="12dp"
        android:textSize="15sp" />
    <!-- Active Contract -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/textView_title_active_contracts"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/active_contract_5.5Gh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFE377"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_title_active_contracts"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="5.5Gh/s"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch Ads Reward"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="0dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/remaining_time_5.5Gh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remaining_time_5.5Gh"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:drawableStart="@drawable/green_dot"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- watch ads reward -->

            <androidx.cardview.widget.CardView
                android:id="@+id/active_contract_7.5Gh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFE377"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_title_active_contracts"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="7.5Gh/s"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Check-in Reward"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="0dp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/remaining_time_7.5Gh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remaining_time_7.5Gh"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:drawableStart="@drawable/green_dot"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- daily check-in reward -->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <!-- 合约滚动控件 -->

</androidx.constraintlayout.widget.ConstraintLayout>